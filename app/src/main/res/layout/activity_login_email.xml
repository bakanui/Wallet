<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    android:scaleX="1"
    android:scaleY="1"
    android:weightSum="1">


    <EditText
        android:id="@+id/email"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:maxLines="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.473" />

    <EditText
        android:id="@+id/password"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:maxLines="1"
        tools:layout_conversion_absoluteX="65dp"
        tools:layout_conversion_absoluteY="304dp"
        tools:layout_conversion_absoluteWidth="245dp"
        tools:layout_conversion_absoluteHeight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.581" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:background="@color/btn_login"
        android:text="@string/btn_login"
        android:textColor="@color/white"
        tools:layout_conversion_absoluteX="30dp"
        tools:layout_conversion_absoluteY="354dp"
        tools:layout_conversion_absoluteWidth="324dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.449" />


    <ImageButton
        android:id="@+id/btnLinkToRegisterScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/register_mail"
        android:contentDescription="@string/registerEmail"
        tools:layout_conversion_absoluteX="35dp"
        tools:layout_conversion_absoluteY="457dp"
        tools:layout_conversion_absoluteWidth="152dp"
        tools:layout_conversion_absoluteHeight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.835" />

    <ImageButton
        android:id="@+id/btnLinkToGmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/register_google"
        android:contentDescription="@string/registerGmail"
        tools:layout_conversion_absoluteX="197dp"
        tools:layout_conversion_absoluteY="457dp"
        tools:layout_conversion_absoluteWidth="152dp"
        tools:layout_conversion_absoluteHeight="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintVertical_bias="0.837" />


</android.support.constraint.ConstraintLayout>